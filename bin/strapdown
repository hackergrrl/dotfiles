#!/bin/bash

# Powered by and inspired by: http://strapdownjs.com

# TODO: rewrite this in NodeJS

FILENAME=$1
THEME=$2
TITLE=${FILENAME%.*}

BEFORE=$(cat <<FOOBAR
<!DOCTYPE html>
<html>
<title>$TITLE</title>

<xmp theme="$THEME" style="display:none;">
FOOBAR
)

AFTER=$(cat <<FOOBAR
</xmp>

<script src="http://strapdownjs.com/v/0.2/strapdown.js"></script>
</html>
FOOBAR
)

echo $BEFORE
echo $(markdown $FILENAME)
echo $AFTER
